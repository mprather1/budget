


<table>
  <tr>
    <th>Account Number:</th>
    <td>#<%= @account.account_number %></td>
    <th>Last recorded activity: </th>
    <% @account.records.each do |f| %>

    <td><%= f.strftime("%I:%M %p on %m/%d/%Y") %></td>
    <% end %>
    <th>Balance</th>
    <td><%= number_to_currency @account.balance %> </td>
  </tr>
  <tr>
    <th>Debit</th>
    <td>
      <%= form_tag(controller: 'accounts', action: 'debit' ) do |f| %>
        <%= number_field_tag(:trans) %>
        <%= submit_tag("Submit") %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>Credit</th>
    <td>
      <%= form_tag(controller: 'accounts', action: 'credit' ) do |f| %>
        <%= number_field_tag(:trans) %>
        <%= submit_tag("Submit") %>
      <% end %>
    </td>
  </tr>
</table>

<table>
  <tr>
    <th>
      History
    </th>
    <% @account.records.each do |record| %>
    <td>
      <%= record %>
    </td>
    <% end %>
  </tr>
</table>
